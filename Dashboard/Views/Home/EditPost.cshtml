@model Post
@{
  ViewData["Title"] = "Edit Post " + Model.Title;
}

<div class="overview">
  <div class="title">
    <i class="uil uil-tachometer-fast-alt"></i>
    <span class="text">Editing post <span class="text-primary">@Model.Title</span></span>
  </div>

  <div>
    <form asp-action="EditPost" method="POST" class="row">
      <input type="hidden"
             asp-for="Id"
             value="@Model.Id" />
      <div class="mb-3">
        <label asp-for="Title" class="form-label">Post Title</label>
        <input type="text"
               asp-for="Title"
               value="@Model.Title"
               class="form-control"
               placeholder="e.g. Awsome Story" />
        <span asp-validation-for="Title" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Description" class="form-label">Post Description</label>
        <textarea type="text"
                  asp-for="Description"
                  value="@Model.Description"
                  class="form-control"
                  placeholder="e.g. It has nice Plot"></textarea>
        <span asp-validation-for="Description" class="text-danger fw-bold"></span>
      </div>
      <div class="mb-3">
        <label asp-for="Author" class="form-label">Author Name</label>
        <input type="text"
               asp-for="Author"
               value="@Model.Author"
               class="form-control"
               placeholder="e.g. John Doe" />
        <span asp-validation-for="Author" class="text-danger fw-bold"></span>
      </div>


      <div class="mb-3 col-lg-6">
        <label asp-for="CategoryId" class="form-label">Category</label>
        <select class="form-select" asp-for="CategoryId" value="@Model.CategoryId">
          <option selected>Select one</option>
          <option value="1">Drama</option>
          <option value="2">Action</option>
          <option value="3">Horror</option>
          <option value="4">Comedy</option>
          <option value="5">Sci-Fi</option>
        </select>
        <span asp-validation-for="CategoryId" class="text-danger fw-bold"></span>
      </div>

      <div class="mb-3 col-lg-5 d-flex align-items-center mt-lg-4">
        <input class="form-control" asp-for="Date" type="Date" value="@Model.Date" id="formFile" />
        <span asp-validation-for="Date" class="text-danger fw-bold"></span>
      </div>

      <div class="col-lg-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
