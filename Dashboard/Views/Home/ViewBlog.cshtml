@model List<Post>
@{
  ViewData["Title"] = "Add New Blog Post";
}

<div class="overview">
  <div class="title">
    <i class="uil uil-tachometer-fast-alt"></i>
    <span class="text">All Blog Posts</span>
  </div>
</div>
@{
  if (Model.Count == 0)
  {
    <div>
      <h2 class="display-6 my-2 text-center">No Blog Post Found</h2>
    </div>
  }
  else
  {
    <div class="posts-container">
      @foreach (Post post in Model)
      {
        <div class="post">
          <div class="post-actions">
            <a asp-action="EditPost" asp-route-postId="@post.Id" class="btn btn-success" role="button">
              <span class="material-symbols-outlined"> Edit </span>
            </a>
            <a asp-action="DeletePost" asp-route-postId="@post.Id" class="btn btn-danger " role="button">
              <span class="material-symbols-outlined"> delete </span>
            </a>
          </div>
          <span class="post-category btn btn-secondary">@post.Category</span>
          <figure class="post-image"></figure>
          <h3 class="post-title">@post.Title</h3>
          <p class="post-desc">@post.Description</p>
          <div class="post-footer">
            <span>@post.Author</span>
            <span>@post.Date</span>
          </div>
        </div>
      }
    </div>
  }
}
