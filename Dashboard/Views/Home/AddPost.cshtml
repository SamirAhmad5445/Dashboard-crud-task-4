@model Post
@{
  ViewData["Title"] = "Add New Blog Post";
}

<div class="overview">
  <div class="title">
    <i class="uil uil-tachometer-fast-alt"></i>
    <span class="text">Adding New Blog Post</span>
  </div>

  <div>
    <form asp-action="AddPost" method="POST" class="row">
      <div class="mb-3">
        <label asp-for="Title" class="form-label">Post Title</label>
        <input type="text"
               asp-for="Title"
               class="form-control"
               placeholder="e.g. Awsome Story" />
      </div>
      <div class="mb-3">
        <label asp-for="Description" class="form-label">Post Description</label>
        <textarea type="text"
                  asp-for="Description"
                  class="form-control"
                  placeholder="e.g. It has nice Plot"></textarea>
      </div>
      <div class="mb-3">
        <label asp-for="Author" class="form-label">Author Name</label>
        <input type="text"
               asp-for="Author"
               class="form-control"
               placeholder="e.g. John Doe" />
      </div>
      
      
      <div class="mb-3 col-lg-6">
        <label asp-for="Category" class="form-label">Category</label>
        <select class="form-select" asp-for="Category">
          <option selected>Select one</option>
          <option value="drama">Drama</option>
          <option value="action">Action</option>
          <option value="horror">Horror</option>
          <option value="comedy">Comedy</option>
          <option value="scifi">Sci-Fi</option>
        </select>
      </div>

      <div class="mb-3 col-lg-5 d-flex align-items-center mt-lg-4">
        <input class="form-control" asp-for="Date" type="Date" id="formFile" />
      </div>

      <div class="col-lg-12 d-flex justify-content-center">
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </form>
  </div>
</div>
